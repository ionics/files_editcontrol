<?xml version="1.0"?>
<info>
	<id>files_editcontrol</id>
	<name>File edit control</name>
	<summary>Control edit to files based on conditions</summary>
	<description>This work bases on FileAccessControl app here: https://github.com/nextcloud/files_accesscontrol/
		Its purpose is blocking the modification on some conditions but not all access</description>
	<licence>AGPL</licence>
	<author>Morris Jobke, Trung</author>
	<version>1.3.0</version>
	<namespace>FilesEditControl</namespace>

	<category>files</category>
	<website>https://github.com/linhtinh11/files_editcontrol</website>
	<bugs>https://github.com/linhtinh11/files_editcontrol/issues</bugs>
	<repository type="git">https://github.com/linhtinh11/files_editcontrol.git</repository>
	<screenshot>https://raw.githubusercontent.com/nextcloud/files_accesscontrol/master/screenshots/1.png</screenshot>
	<screenshot>https://raw.githubusercontent.com/nextcloud/files_accesscontrol/master/screenshots/2.png</screenshot>

	<types>
		<filesystem/>
	</types>

	<dependencies>
		<nextcloud min-version="13" max-version="13" />
	</dependencies>

	<documentation>
		<admin>https://docs.nextcloud.com/server/13/go.php?to=admin-files-access-control</admin>
	</documentation>

	<settings>
		<admin-section>OCA\FilesEditControl\Settings\Section</admin-section>
		<admin>OCA\FilesEditControl\Settings\Admin</admin>
	</settings>
</info>
